{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sdc-timer",
  "title": "SDC Timer",
  "description": "Sefer Design Co. client time tracking",
  "icon": "logo_square.svg",
  "author": "rsefer",
  "owner": "sefer-design-co",
  "categories": [
    "Data"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "domain",
      "title": "Domain",
      "description": "Domain for API",
      "type": "textfield",
      "placeholder": "https://example.com",
      "required": true
    },
    {
      "name": "endpoint",
      "title": "Endpoint",
      "description": "Endpoint for API",
      "type": "textfield",
      "placeholder": "/api/v1/clients",
      "required": true
    },
    {
      "name": "accessToken",
      "title": "Access Token",
      "description": "Grants access to the API",
      "type": "password",
      "default": "",
      "required": true
    },
    {
      "name": "hoursFile",
      "title": "Hours File",
      "description": "Location of hours file",
      "type": "file",
      "default": "",
      "required": true
    }
  ],
  "commands": [
    {
      "name": "toggle-timer",
      "title": "Toggle Timer",
      "description": "Toggle the timer",
      "mode": "no-view"
    },
    {
      "name": "enter-timer",
      "title": "Enter Time",
      "description": "Enter time manually",
      "mode": "no-view"
    },
    {
      "name": "enter-timer-form",
      "title": "Enter Timer Form",
      "description": "The form for entering time manually",
      "mode": "view"
    },
    {
      "name": "start-timer",
      "title": "Start Timer",
      "description": "Start a timer",
      "mode": "no-view"
    },
    {
      "name": "invoice",
      "title": "Invoice",
      "description": "Invoice a client",
      "mode": "no-view"
    },
    {
      "name": "choose-client",
      "title": "Choose Client",
      "description": "The form for choosing a client",
      "mode": "view"
    },
    {
      "name": "timer-menu-bar",
      "title": "Menu Bar",
      "subtitle": "Timer",
      "description": "See the current timer",
      "mode": "menu-bar",
      "interval": "10s"
    }
  ],
  "tools": [
    {
      "name": "generate-invoice-links",
      "title": "Generate Invoice Links",
      "description": "Generates relevant invoice links"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.93.0",
    "@raycast/utils": "^1.19.0",
    "axios": "^1.8.1",
    "csv-parse": "^5.6.0",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^22.13.8",
    "@types/react": "^19.0.10",
    "eslint": "^9.21.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
