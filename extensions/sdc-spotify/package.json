{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sdc-spotify",
  "title": "SDC Spotify",
  "description": "Spotify utilities.",
  "icon": "icon.svg",
  "author": "rsefer",
  "categories": [
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "user-shows",
      "title": "Saved Shows",
      "description": "Browse your saved Spotify shows",
      "mode": "view"
    },
    {
      "name": "recent-episodes",
      "title": "Recent Podcast Episodes",
      "description": "Show the latest episodes from your saved shows",
      "mode": "view"
    },
    {
      "name": "search-spotify",
      "title": "Search Spotify",
      "description": "Search all of Spotify",
      "mode": "view"
    },
    {
      "name": "refresh-data",
      "title": "Refresh Spotify Data",
      "description": "Automatically refresh Spotify podcasts data",
      "mode": "no-view",
      "interval": "15m"
    },
    {
      "name": "start-dj",
      "title": "Start DJ",
      "description": "Play the DJ playlist",
      "mode": "no-view"
    },
    {
      "name": "skip-backward",
      "title": "Skip Backward",
      "description": "Skip backward in the current track",
      "mode": "no-view",
      "preferences": [
        {
          "name": "skipBackwardSeconds",
          "description": "Number of seconds to skip backward",
          "type": "textfield",
          "default": "15",
          "required": false
        }
      ]
    },
    {
      "name": "skip-forward",
      "title": "Skip Forward",
      "description": "Skip forward in the current track",
      "mode": "no-view",
      "preferences": [
        {
          "name": "skipForwardSeconds",
          "description": "Number of seconds to skip forward",
          "type": "textfield",
          "default": "15",
          "required": false
        }
      ]
    },
    {
      "name": "start-discover-weekly",
      "title": "Start Discover Weekly",
      "description": "Play the Discover Weekly playlist",
      "mode": "no-view",
      "preferences": [
        {
          "name": "playlistId",
          "description": "Spotify Playlist ID",
          "type": "textfield",
          "placeholder": "e.g., 37i9dQZEVXcVtTQ6a45WtP",
					"default": "37i9dQZEVXcVtTQ6a45WtP",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.5",
    "@raycast/utils": "^2.2.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix"
  }
}
